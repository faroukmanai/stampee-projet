<section>
  <h1>{{ titre|upper }}</h1>
  
  <form method="POST" action="admin?entite=timbre&action=m&timbre_id={{ timbre.timbre_id }}" enctype="multipart/form-data">
 
    <label>Titre</label>
    <input name="timbre_Titre" value="{{ timbre.timbre_Titre ?? '' }}">
    <span>&nbsp;{{ erreurs.timbre_Titre }}</span>

    <label>Année de Timbre</label>
    <input name="timbre_Annee" type="number" value="{{ timbre.timbre_Annee|default('now')|date('Y') }}"
           min="10" max="{{ 'now' | date('Y') }}">
    <span>&nbsp;{{ erreurs.timbre_Annee }}</span>

    <label>Description</label>
    <textarea name="timbre_Description" rows="3">{{ timbre.timbre_Description ?? '' }}</textarea>
    <span>&nbsp;{{ erreurs.timbre_Description }}</span>

    <label>Pays</label>
    <select name="timbre_Pays">
      <option value="" {% if not timbre.timbre_Pays %}selected{% endif %}>Sélectionnez un Pays</option>
      <option value="Canada" {% if timbre.timbre_Pays == 'Canada' %}selected{% endif %}>Canada</option>
      <option value="USA" {% if timbre.timbre_Pays == 'USA' %}selected{% endif %}>USA</option>
      <option value="United_kingdom" {% if timbre.timbre_Pays == 'United_kingdom' %}selected{% endif %}>United kingdom</option>
    </select>
    <span>&nbsp;{{ erreurs.timbre_Pays }}</span>


    <label>Etat</label>
    <select name="timbre_Etat">
      <option value="Parfait" {% if timbre.timbre_Etat == 'Parfait' %} selected {% endif %}>Parfait</option>
      <option value="Moyen" {% if timbre.timbre_Etat == 'Moyen' %} selected {% endif %}>Moyen </option>
      <option value="Endommagé" {% if timbre.timbre_Etat == 'Endommagé' %} selected {% endif %}>Endommagé</option>
    </select>
    <span>&nbsp;{{ erreurs.timbre_Etat }}</span>
  
    <label>Affiche au format jpg</label>
    <input name="timbre_Affiche" type="file">
    <span>&nbsp;{{ erreurs.timbre_Affiche }}</span>

    <input type="hidden" name="timbre_id" value="{{ timbre.timbre_id }}">
    <input type="submit" value="Envoyer">
  </form>

</section>
